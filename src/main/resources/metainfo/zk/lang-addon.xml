<language-addon>
    <addon-name>gallery</addon-name>
  	<version>
		<version-class>my.gallery.Version</version-class>
		<version-uid>1.0-SNAPSHOT</version-uid>
		<zk-version>6.0.1</zk-version><!-- or later -->
	</version>
    
	<language-name>xul/html</language-name>
	<component>
		<component-name>mylabel</component-name> <!-- required -->
		<component-class>my.gallery.Mylabel</component-class> <!-- required -->
		<widget-class>gallery.Mylabel</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/mylabel.js</mold-uri>

			<!--
			== Tip in advance ==
				You don't have to specify a css.dsp if you need not ,
				but usually you need it.

				You could assign a .css file ,too.

				The css.dsp is almost as same as CSS file ,
				but have more powerful enhancement.	(like EL support.)
			====
			-->
			<css-uri>css/mylabel.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>